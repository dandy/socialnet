<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h2>@Html.ActionLink("Logout", "Logout", "Home")</h2>

    <ul id="main-nav">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("My profile", "ShowUserProfile", "Profile", new { username = User.Identity.Name }, null)</li>
        <li>@Html.ActionLink("Friends", "Friends", "Home")</li>
        <li>@Html.ActionLink("Edit profile","EditProfile","Profile")</li>

    </ul>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
